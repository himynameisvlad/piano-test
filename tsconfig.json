{
  "compilerOptions": {
    "baseUrl": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "outDir": "./dist/",
    "sourceMap": true,
    "lib": ["dom", "es2017"],
    "module": "ES2015",
    "target": "es5",
    "paths": {
      "@services/*": ["services/*"],
      "@services": ["services"],
      "@modules/*": ["modules/*"],
      "@modules": ["modules"],
      "@models/*": ["models/*"],
      "@models": ["models/"],
      "@components/*": ["components/*"],
      "@components": ["components"],
      "@const/*": ["const/*"],
      "@const": ["const"],
      "@pipes/*": ["pipes/*"],
      "@pipes": ["pipes"],
      "@interfaces/*": ["interfaces/*"],
      "@interfaces": ["interfaces"],
      "@helpers/*": ["helpers/*"],
      "@helpers": ["helpers"],
      "@ui/*": ["modules/ui/*"],
      "@ui": ["modules/ui"],
    }
  }
}
